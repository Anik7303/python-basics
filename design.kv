#:kivy 2.0

<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 15, 15
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            RelativeLayout:    
                Button:
                    size_hint: .3, .5
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: message
                text: ""

        GridLayout:
            cols: 2
            size_hint: .2, .2
            padding: 15, 15
            spacing: 15, 0
            Button:
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else .5
                color: 1, 0, 0, 1
                text: "Forgot Password?"
                on_press: root.redirect_to_forgot_pass()
            Button:
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else .5
                color: 0, 0, 1, 1
                text: "Sign Up"
                on_press: root.redirect_to_signup()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign up"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)
        Button:
            background_color: 1, 1, 1, 0
            opacity: 1 if self.state == 'normal' else .5
            color: 0, 1, 1, 1
            text: "Already have an account? Login"
            on_press: root.return_to_login()

<SignUpSuccessScreen>:
    GridLayout:
        cols: 1
        spacing: 20, 20
        padding: 20, 20
        Label:
            id: message
            test: "Signup successful. Login to get quotes"
        Button:
            text: "Login"
            on_press: root.return_to_login()

<LoginSuccessScreen>:
    GridLayout:
        cols: 1
        Button:
            text: "logout"
            on_press: root.logout()
        TextInput:
            id: feeling
            hint_text: 'things to search fo: happy, sad, unloved, etc.'
        Button:
            text: "Enlighten Me"
            on_press: root.search(root.ids.feeling.text)
        Label:
            id: message
            text: ""

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
    SignUpSuccessScreen:
        name: "signup_success_screen"
    LoginSuccessScreen:
        name: "login_success_screen"
